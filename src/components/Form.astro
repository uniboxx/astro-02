<form
  class="max-w-90 flex flex-col gap-4 border-2 border-gray-400 px-8 py-4 m-auto"
  action="/api/create-post"
  method="post"
>
  <label class="flex flex-col" for="author"
    >Author
    <input
      class="border-1 border-gray-300"
      type="text"
      id="author"
      name="author"
    />
  </label>
  <label class="flex flex-col" for="body"
    >Content
    <textarea class="border-1 border-gray-300" id="body" name="body" rows="5"
    ></textarea>
  </label>
  <button
    class="block ml-auto bg-blue-500 text-amber-50 py-2 px-4 rounded cursor-pointer"
    >Invia</button
  >
</form>
