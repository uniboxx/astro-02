---
import Navigation from '@components/Navigation.astro';
import Authentication from '@components/Authentication.astro';
---

<header>
  <Navigation />
  <Authentication />
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem 4px;
    gap: 1rem;
    @media screen and (min-width: 30rem) {
      padding: 2rem;
      justify-content: space-between;
      flex-direction: row;
    }
  }
</style>
