---
import { auth } from '@utils/auth';
import AuthBtn from './AuthBtn.svelte';
import Username from '@components/Username.svelte';
const session = await auth.api.getSession({
  headers: Astro.request.headers,
});
const username = session?.user?.name;
---

{
  username ? (
    <div class="flex justify-end items-center w-full gap-4 pr-4 md:w-max md:order-2">
      <Username username={username} client:load />
    </div>
  ) : (
    <div class="flex justify-end items-center w-full gap-4 pr-4 md:w-max md:order-2">
      <AuthBtn client:load mode="signin" />
      <AuthBtn client:load mode="signup" />
    </div>
  )
}
